{
  "compilerOptions": {
    "baseUrl": ".", // import 文を絶対パスで記述する。
    "paths": {},
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false, // TODO 暗黙のany でエラーが出なくなる
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "Component/**/*.ts",
    "Component/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "lib/*.ts",
    "./.eslintrc.js"
  ],
  "exclude": ["node_modules"],
  "parserOptions": {
    "project": "./tsconfig.json"
  }
}
